#!/bin/sh

RSSFILE=~/.config/newsboat/urls

if test -n "$1";
then
	URL=$1
elif test ! -t 0;
then
	URL=$(cat < /dev/stdin)
else
	echo "add2rss: No Input"
	exit
fi

if test -n "$2";
then
	URL="$URL \"$2\""
fi

if test -n "$(grep $URL $RSSFILE)";
then
	echo "add2rss: You already added this feed"
else
	echo "$URL" >> $RSSFILE
	echo "add2rss: Added"
fi

