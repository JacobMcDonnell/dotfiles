#!/bin/sh

[ "$(connmanctl services | grep "Wired" | awk -F' ' '{print $2}')" = "Wired" ] && CONNECTION="Wired" || CONNECTION="$(connmanctl services | grep '*' | awk -F' ' '{print $2}')"

[ "$CONNECTION" = "Wired" ] && IP="$(ip address | grep eth | grep 192.168.)" || IP="$(ip address | grep wlo | grep 192.168. )"

IP="${IP%/*}"
IP="${IP##* }"

case $BLOCK_BUTTON in
	1)  printf $IP | dmenu ;;
	2) "$TERMINAL" -e connmanctl ;;
	3) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

printf $CONNECTION
