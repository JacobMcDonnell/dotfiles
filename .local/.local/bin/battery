#!/bin/sh
for battery in /sys/class/power_supply/BAT?
do
	capacity=$(cat "$battery"/capacity) || exit
	status=$(cat "$battery"/status)
	[ "$status" = "Discharging" ] && [ "$capacity" -le 15 ] && warn "Low Battery!"
	printf "%s %s\n" "$(echo "$status" | sed "s/,//;s/Discharging/D:/;s/Not charging/F:/;s/Charging/C:/;s/Unknown/U:/g")" "$(echo "$capacity" | sed -e 's/$/%/')"
done
